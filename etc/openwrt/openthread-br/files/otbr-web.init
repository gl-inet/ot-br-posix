START=99

USE_PROCD=1

start_service() {
    local ipaddr port

    ipaddr=$(uci get network.lan.ipaddr)
    port=8080

    procd_open_instance
    procd_set_param command /usr/sbin/otbr-web -d 7 -I br-lan -p $port -a $ipaddr
    procd_close_instance
}